<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="connect-src">
            <values>
                <value id="turnto_subdomain" type="host">*.turnto.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="pixlee_photos" type="host">photos.pixlee.co</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="turnto_subdomain" type="host">*.turnto.com</value>
                <value id="turnto_subdomain" type="host">wac.edgecastcdn.net</value>
            </values>
        </policy>
        <policy id="script-src">
            <values>
                <value id="turnto_subdomain" type="host">*.turnto.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="turnto_subdomain" type="host">*.turnto.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
