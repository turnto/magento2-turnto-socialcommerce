<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="turnto_socialcommerce_pinboard" class="TurnTo\SocialCommerce\Block\Widget\Pinboard">
        <label translate="true">TurnTo SpeedFlex - Pinboard</label>
        <description>A responsive pinboard showcasing customer-submitted Checkout Comments or Visual Content in a unique product-centered browsing experience. Only one pinboard may be inserted on a page.</description>
        <parameters>
            <parameter name="content_type" xsi:type="select" required="true" visible="true" sort_order="10">
                <label>Content Type</label>
                <description>The type of pinboard content to be displayed</description>
                <options>
                    <option name="commentsPinboard" value="commentsPinboard" selected="true">
                        <label>Comments Pinboard</label>
                    </option>
                    <option name="vcPinboard" value="vcPinboard">
                        <label>Visual Content Pinboard</label>
                    </option>
                    <option name="commentsPinboardTeaser" value="commentsPinboardTeaser">
                        <label>Checkout Comment Pinboard Teaser</label>
                    </option>
                </options>
            </parameter>
            <parameter name="template" xsi:type="select" required="true" visible="false" sort_order="30">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="TurnTo_SocialCommerce::widget/pinboard.phtml" selected="true">
                        <label translate="true">Pinboard Template</label>
                    </option>
                </options>
            </parameter>
            <parameter name="skus" xsi:type="text" required="false" visible="true" sort_order="40">
                <label>Filter by SKUs</label>
                <description>Pinboard will filter products by the SKUs provided in this field. Separate SKUs by commmas. e.g. "SKU1, SKU2"</description>
            </parameter>
            <parameter name="brands" xsi:type="text" required="false" visible="true" sort_order="40">
                <label>Filter by Brands</label>
                <description>Pinboard will filter products by the Brands provided in this field. Separate Brands by commmas. e.g. "BRAND1, BRAND2"</description>
            </parameter>
            <parameter name="tags" xsi:type="text" required="false" visible="true" sort_order="40">
                <label>Filter by Tags</label>
                <description>Pinboard will filter products by the Tags provided in this field. Separate Tags by commmas. e.g. "TAG1, TAG2"</description>
            </parameter>
        </parameters>
    </widget>
    <widget id="turnto_socialcommerce_landing_page" class="TurnTo\SocialCommerce\Block\Widget\LandingPage">
        <label translate="true">TurnTo SpeedFlex - Landing Page</label>
        <description>A widget for inserting the requisite code for a TurnTo Landing Page. The content of this widget does not produce any visible content.</description>
        <parameters>
            <parameter name="template" xsi:type="select" required="true" visible="false" sort_order="30">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="TurnTo_SocialCommerce::widget/landing_page.phtml" selected="true">
                        <label translate="true">Landing Page Template</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
